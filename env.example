# Soumetsu Service Configuration
# Copy this file to .env and fill in your actual values
# 
# Usage: cp env.example .env
# Then edit .env with your actual configuration values

# Application Settings
SOUMETSU_PORT=8080
SOUMETSU_ENV=development
SOUMETSU_COOKIE_SECRET=your-secret-cookie-key-change-this-in-production-min-32-chars
SOUMETSU_KEY=your-soumetsu-key-change-this

# Internal Paths
SOUMETSU_INTERNAL_AVATARS_PATH=./static/avatars
SOUMETSU_INTERNAL_BANNERS_PATH=./static/banners

# External URLs
SOUMETSU_BASE_URL=http://localhost:8080
SOUMETSU_AVATAR_URL=https://a.ussr.pl
SOUMETSU_API_URL=http://localhost:5000
SOUMETSU_BANCHO_URL=https://c.ussr.pl

# Beatmap Settings
SOUMETSU_BEATMAP_MIRROR_API_URL=https://api.ussr.pl
SOUMETSU_BEATMAP_DOWNLOAD_MIRROR_URL=https://mirror.ussr.pl

# Database Settings
MYSQL_HOST=localhost
MYSQL_TCP_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your-database-password
MYSQL_DATABASE=rosu

# Redis Settings
REDIS_MAX_CONNECTIONS=10
REDIS_NETWORK_TYPE=tcp
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASS=
REDIS_DB=0
REDIS_USE_SSL=false

# Mailgun Settings
MAILGUN_DOMAIN=your-mailgun-domain
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_PUBLIC_KEY=your-mailgun-public-key
MAILGUN_FROM=noreply@your-domain.com

# Discord Settings
DISCORD_SERVER_URL=https://discord.gg/your-server
DISCORD_APP_CLIENT_ID=your-discord-client-id
DISCORD_APP_CLIENT_SECRET=your-discord-client-secret
DISCORD_USER_LOOKUP_URL=https://discord.com/api/v10/users/

# Security Settings
RECAPTCHA_SITE_KEY=your-recaptcha-site-key
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key
IP_LOOKUP_URL=https://ip-api.com/json/
PAYPAL_EMAIL_ADDRESS=your-paypal-email@example.com
